<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BHD_Demo.Views.Service.ServiceDetailPage"
             Title="Service Details">

    <StackLayout Padding="20" VerticalOptions="Center">
        
        <Label Text="Service Details" 
               FontSize="24" 
               HorizontalOptions="Center" />

        <Label Text="Service Date:" FontSize="18" />
        <Label Text="{Binding ServiceDate}" FontSize="16" />

        <Label Text="Service Time:" FontSize="18" />
        <Label Text="{Binding ServiceTime}" FontSize="16" />
        
    </StackLayout>
</ContentPage>
