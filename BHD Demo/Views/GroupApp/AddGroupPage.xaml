<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BHD_Demo.Views.GroupApp.AddGroupPage"
             Title="Add New Group">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
        <Label Text="Add New Group" FontSize="24" HorizontalOptions="Center" />

        <Entry Placeholder="Group Name" 
               Text="{Binding GroupName}" 
               FontSize="18" />

        <Entry Placeholder="Description" 
               Text="{Binding Description}" 
               FontSize="18" />

        <Button Text="Save Group" 
                Command="{Binding SaveGroupCommand}" 
                FontSize="18" 
                HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>